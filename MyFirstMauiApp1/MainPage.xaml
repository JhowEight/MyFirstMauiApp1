<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Tela de Login" FontSize="30"  HorizontalOptions="Center" />

            <Label Text="Digite seu usuário:" />
            <Entry x:Name="InputUsuario" Placeholder="Digite"/>

            <Label Text="Digite sua senha:"/>
            <Entry x:Name="InputSenha"  Placeholder="Digite"/>

            <Label Text="Já tem uma conta?" HorizontalOptions="Center"/>
            <Button Text="Entrar" Clicked="Entrar_Clicked"/>




        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
